{
  "name": "hangman",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git://github.com/zhenyulin/Hangman.git"
  },
  "scripts": {
    "postinstall": "node_modules/selenium-standalone/bin/selenium-standalone install",
    "start": "export NODE_PATH=. && nodemon server/app.js --exec babel-node --ignore client/  --ignore server/state.json",
    "test": "mocha --compilers js:babel-core/register --require ./config/mocha.js server/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "istanbul cover _mocha -- --compilers js:babel-core/register --require ./config/test.js server/**/*.spec.js --report lcovonly",
    "e2e": "node_modules/.bin/nightwatch --config ./config/nightwatch.js",
    "lint": "eslint server client config test -c config/eslint.js",
    "lint:fix": "npm run lint -- --fix",
    "build": "babel server -d dist",
    "serve": "export NODE_PATH=. && node dist/app.js"
  },
  "keywords": [],
  "author": "Zhenyu Lin",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-react": "^6.5.0",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "^9.8.3",
    "mocha": "^3.1.2",
    "nightwatch": "^0.9.9",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-logger": "^2.7.4",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0",
    "selenium-standalone": "^5.8.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.1"
  },
  "dependencies": {
    "express": "^4.14.0",
    "immutable": "^3.8.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "socket.io": "^1.5.1",
    "socket.io-client": "^1.5.1",
    "styled-components": "^1.0.10"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "add-module-exports"
    ]
  }
}
